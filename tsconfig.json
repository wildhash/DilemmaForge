{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "jsx": "react-jsx",
    "jsxImportSource": "@devvit/public-api",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    // Note: strict mode disabled for Devvit compatibility
    // Devvit's types and JSX runtime have some quirks that cause false positives
    // For production, consider enabling strictNullChecks and strictFunctionTypes individually
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
